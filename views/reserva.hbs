        #navbar li a:hover {
            color: #f27a25;
            font-size: 17px;
        }

        #navbar li a.active {
            color: white;
            font-size: 17px;
        }

        #navbar li a.active::after {
            content: "";
            width: 30%;
            height: 2px;
            background: #f27a25;
            position: absolute;
            bottom: -4px;
            left: 20px;
        }

        @media (max-width: 768px) {
            #header {
                display: none;
