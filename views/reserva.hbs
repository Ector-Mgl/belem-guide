    <script>
    const showreservations = require('/routes/routes.js');
    document.addEventListener("DOMContentLoaded", function() {
            const switch4 = document.getElementById('flexSwitchCheck4');
            const switch8 = document.getElementById('flexSwitchCheck8');

            switch4.addEventListener('change', function() {
                if (switch4.checked) {
                    switch8.checked = false;
                }
            });

            switch8.addEventListener('change', function() {
                if (switch8.checked) {
                    switch4.checked = false;
                }
            });
        });
